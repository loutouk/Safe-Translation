let isPrime n ->
    let auxA a ->
      let auxB b ->
        if b = n then FALSE
        else if (a * b) = n then
          TRUE
        else
          auxB (b+1)
      in
      if a = n then TRUE else
      if auxB a then
        FALSE
      else
        auxA (a+1)
    in
    auxA 2
  in
  let nextPrime n ->
    if isPrime n then n else nextPrime (n+1)
  in
  nextPrime 3000